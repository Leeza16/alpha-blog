<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination mt-4">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8"> 
        <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
          <div class="card-header">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to gravator_for(user, size: 150), user_path(user), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%# <a href="#" class="btn btn-outline-success">View</a> %>
            <%= link_to 'View Profile', user, class:"btn btn-outline-success" %>
            <%= link_to 'Edit Profile', edit_user_path(user), class:"btn btn-outline-info" %>
            <%# <%= link_to 'Delete', user_path(article), class:"btn btn-outline-danger",data: { "turbo-method": :delete } %>
            <%# <a href="#" class="btn btn-outline-info">Edit</a> %>
            <%# <a href="#" class="btn btn-outline-danger">Delete</a> %>
          </div>
          <div class="card-footer text-muted">
            Joined <%= time_ago_in_words(user.created_at) %> ago, Updated <%= time_ago_in_words(user.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mt-4">
  <%= will_paginate @users, :container => false %>
</div>
