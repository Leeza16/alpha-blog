<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8"> 
        <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
          <div class="card-header">
            <%  if article.user %>
              by <i><%= link_to article.user.username, user_path(article.user) %></i>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%# <a href="#" class="btn btn-outline-success">View</a> %>
            <%= link_to 'View', article_path(article), class:"btn btn-outline-success" %>
            <%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(article), class:"btn btn-outline-danger",data: { "turbo-method": :delete } %>
            <%# <a href="#" class="btn btn-outline-info">Edit</a> %>
            <%# <a href="#" class="btn btn-outline-danger">Delete</a> %>
          </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(article.created_at) %> ago, Updated <%= time_ago_in_words(article.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>